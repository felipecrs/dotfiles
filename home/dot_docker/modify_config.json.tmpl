#!/bin/bash

set -euo pipefail

jq="jq --raw-output --tab"
json=$(cat /dev/stdin)

if [ -z "${json}" ]; then
  json='{}'
fi

json=$(jq '.aliases.builder = "buildx"' <<<"$json")

json=$($jq '.aliases.builder = "buildx"' <<<"${json-"{}"}")

# {{ if .is_wsl }}
json=$($jq '.credsStore = "wincred.exe"' <<<"$json")
# {{ else if .is_gnome }}
json=$($jq '.credsStore = "secretservice"' <<<"$json")
# {{ end }}

echo -n "$json"
